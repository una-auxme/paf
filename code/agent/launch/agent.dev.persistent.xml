<?xml version="1.0" encoding="UTF-8"?>
<!--This launch file starts all nodes that cannot be restarted while the leaderboard is running-->
<!--It is automatically started when launching the leaderboard with launch_leaderboard.dev.sh-->
<launch>
    <arg name="role_name" default="hero" />
    <arg name="control_loop_rate" default="0.05" />

    <set_parameter name="use_sim_time" value="true" />

    <node pkg="agent" exec="data_management_node" name="data_management_node">
        <param name="role_name" value="$(var role_name)" />
    </node>

    <!-- kalman localization with robot localization package -->
    <include file="$(find-pkg-share localization)/launch/localization.xml">
      <arg name="control_loop_rate" value="$(var control_loop_rate)" />
      <arg name="role_name" value="$(var role_name)" />
    </include>

    <!-- planning -->
    <include file="$(find-pkg-share planning)/launch/planning.dev.persistent.xml">
    </include>
</launch>
